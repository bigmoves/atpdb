{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "./target/release/atpdb serve --port=$PORT --connect",
    "healthcheckPath": "/stats",
    "healthcheckTimeout": 30000,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1,
    "env": {
      "ATPDB_RELAY": "bsky.network",
      "ATPDB_MODE": "manual",
      "RUST_LOG": "info"
    }
  }
}